<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCADA Web</title>
    <style>
        body {
            text-align: center;
        }

        .container {
            position: relative;
            display: inline-block;
        }

        .scada-image {
            width: 800px;
            /* Điều chỉnh theo kích thước ảnh SCADA */
        }

        .button {
            position: absolute;
            width: 50px;
            height: 25px;
            background-color: red;
            color: white;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .switch {
            position: absolute;
            width: 50px;
            height: 25px;
            background-color: gray;
            color: white;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .on {
            background-color: green;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .topnav {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #2e2699;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .topnav .left-nav {
            display: flex;
            align-items: center;
        }


        .topnav a {
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #2989c0;
            color: white;
        }
    </style>

</head>

<body>
    <div class="topnav">
        <div class="left-nav">
            <a href="/">Home</a>
            <a href="/create_user">Create Users</a>
            <a href="/list">List User</a>
            <a href="/data">DATA</a>
            <a class="active" href="/hmi">HMI</a>
        </div>
    </div>

    <h2>SCADA Web Control</h2>
    <div class="container">
        <!-- Ảnh SCADA từ WinCC -->
        <img src="/images/SCA.png" class="scada-image">

        <!-- Nút điều khiển Motor1 -->
        <button class="switch" id="motor1" style="top: 200px; left: 150px;">OFF</button>

        <!-- Nút điều khiển Quạt HN -->
        <button class="switch" id="fan1" style="top: 250px; left: 600px;">OFF</button>
    </div>

    <script>
        const motor1Btn = document.getElementById("motor1");
        const fan1Btn = document.getElementById("fan1");

        function toggleSwitch(button, deviceName) {
            let currentState = parseInt(button.getAttribute("data-state"));
            let newState = currentState === 1 ? 0 : 1;

            button.setAttribute("data-state", newState);
            button.classList.toggle("on", newState === 1);
            button.textContent = newState === 1 ? "ON" : "OFF";

            fetch('/api/button-press', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ device: deviceName, state: newState })
            });
        }

        motor1Btn.addEventListener("click", () => toggleSwitch(motor1Btn, "motor1"));
        fan1Btn.addEventListener("click", () => toggleSwitch(fan1Btn, "fan1"));
    </script>

</body>

</html>