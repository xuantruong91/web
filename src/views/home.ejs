    <script>
        var swiper = new Swiper('.swiper-container', {
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            keyboard: {
                enabled: true,
                onlyInViewport: false,
            },
        });
        document.addEventListener("scroll", function () {
            var infoSection = document.getElementById("info");
            var position = infoSection.getBoundingClientRect().top;
            var windowHeight = window.innerHeight;
            if (position < windowHeight - 50) {
                infoSection.classList.add("visible");
            }
        });

        let deferredPrompt;

        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();  // Ngăn chặn hiển thị mặc định
            deferredPrompt = e;

            // Hiển thị nút tùy chỉnh cho người dùng
            let installButton = document.createElement("button");
            installButton.textContent = "Thêm vào màn hình chính";
            installButton.style.position = "fixed";
            installButton.style.bottom = "20px";
            installButton.style.right = "20px";
            installButton.style.padding = "10px 20px";
            installButton.style.backgroundColor = "#007bff";
            installButton.style.color = "white";
            installButton.style.border = "none";
            installButton.style.borderRadius = "5px";
            document.body.appendChild(installButton);

            installButton.addEventListener("click", () => {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === "accepted") {
                        console.log("Người dùng đã thêm vào màn hình chính");
                    } else {
                        console.log("Người dùng từ chối");
                    }
                    deferredPrompt = null;
                    installButton.style.display = "none";  // Ẩn nút sau khi click
                });
            });
        });

    </script>
